  .header{
    margin-top: 50rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;

  }
  .userinfo {
    display: flex;
    flex-direction: row;
    background-color: black;
    text-align: left;
    /* width: 100%; */
    height: 30%;
    background: white;
    align-items: left;
    
  }
  .userinfo-avatar{
    background-color: black;
    margin-top: 10rpx;
    border-radius: 90rpx;
    height: 130rpx;
    width: 130rpx;
  }
  .userinfo-nickname{
    position: absolute;
    top: 60rpx;
    left: 180rpx;
    /* background-color: red; */
    text-align: center;
    margin-top: 30rpx;
  }
  .button{
    margin-top: 40rpx;
    margin-right: 30rpx;
    font-size: 22rpx;
    background-color: #9662fe;
    color: #fff;
    width: 120rpx;
    height: 60rpx;
  }
  .body{
    padding: 20rpx;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;
  }
  .body .wen{
    width: 60rpx;
    background-color: #3de45b;
    color: #fff;
  }
  .question{
    position: relative;
    letter-spacing: 2rpx;
    padding: 20rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    font-size: 30rpx;
    text-align: left;
    border: .5px solid grey;
    border-right: none;
    border-left: none;
    border-top: none;
  }
  .question ::after{
    content:'';
    position: absolute;
    border: 15px solid rgba(0, 0, 0, 0);
    width: 0;    
    height: 0; 
    border-left-width: 0;
    color: red;
  }
  .foot{
    margin-top: 30rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
  }
  .foot .red{
    color: red;
  }
